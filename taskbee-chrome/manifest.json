{
    "manifest_version": 2,
    "name": "Taskbee",
    "version": "0.0.1",
    "description": "Productivity aid to help people avoid online distractions",
    "permissions": [
      "*://*/*",
      "http://*/*",
      "https://*/*",
      "http://*/",
      "https://taskbee.byu.edu/*",
      "http://www.google.com/",
      "https://www.google.com/"
    ],
    "browser_action": {
        "default_popup": "html/main.html"
    },
    "icons" : {
      "16" : "bee16.png",
      "48" : "bee48.png",
      "128" : "bee128.png"
    }


}
