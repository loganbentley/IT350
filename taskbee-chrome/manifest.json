{
    "manifest_version": 2,
    "name": "Taskbee",
    "version": "0.0.2",
    "description": "Productivity aid to help people avoid online distractions",
    "permissions": [
      "tabs",
      "*://*/*",
      "http://*/*",
      "https://*/*",
      "http://*/",
      "https://taskbee.byu.edu/*",
      "http://www.google.com/",
      "https://www.google.com/"
    ],
    "browser_action": {
        "default_popup": "html/main.html"
    },
    "icons" : {
      "16" : "thumb16square.png",
      "48" : "thumb48square.png",
      "128" : "thumb128square.png"
    },
    "background": {
        "scripts": ["js/background.js"]
    }

}
